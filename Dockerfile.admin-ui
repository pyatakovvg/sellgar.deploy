
# BUILD APP
FROM node:18-alpine3.15 as ui

RUN npm install -g npm@latest
RUN npm config set package-lock false

WORKDIR /admin

COPY ./sellgar.admin.ui/             ./

RUN yarn
RUN yarn build


# START NGINX
FROM nginx

COPY --from=ui /admin/app/client/build /admin

WORKDIR /etc/nginx

CMD ["nginx", "-g", "daemon off;"]
